<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mmtechbd.remotehealthmonitor.User_Profile_Settings">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName"
        android:ems="10"
        android:id="@+id/userFName"
        android:hint="First Name"
        android:maxLines="1"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName"
        android:ems="10"
        android:maxLines="1"
        android:id="@+id/userLName"
        android:hint="LastName"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userSex"
        android:hint="Sex"
        android:ems="10"
        android:maxLines="1"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:maxLines="1"
        android:id="@+id/userDob"
        android:hint="Date of Birth (YYYY-MM-DD)"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userHeight"
        android:hint="Height (&apos;&apos;&apos;)"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:ems="10"
        android:maxLines="1"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userWeight"
        android:inputType="numberDecimal"
        android:hint="Weight (in kg)"
        android:maxLines="1"
        android:ems="10"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionNext" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userAddress"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:background="@drawable/bg_edittext"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:imeOptions="actionDone" />

    <Button
        android:background="@drawable/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:fontFamily="Helvetica"
        android:id="@+id/button5"
        android:onClick="updateUser"
        android:textColor="@color/text_bt_login"
        android:layout_margin="5dp" />
</LinearLayout>
</ScrollView>
